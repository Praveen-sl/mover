<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_below="@id/image"
            android:text="Praveen NEW PROJECT"/>
        <ImageView
            android:id="@+id/image"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_marginTop="40sp"
            android:src="@drawable/p1" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_marginStart="130dp"
            android:layout_marginTop="5dp"
            android:text="Welcome back!"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1"
            android:layout_marginStart="70dp"
            android:layout_marginTop="5dp"
            android:text="Log in to your existant account of Q Allure" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/t2"
            android:layout_marginStart="30sp"

            android:layout_marginTop="20sp"
            app:cardCornerRadius="20sp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:src="@drawable/user" />

            <EditText
                android:id="@+id/ed1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="70sp"
                android:background="@color/white"
                android:hint="User name" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/t2"
            android:layout_marginStart="30sp"
            android:layout_marginTop="100sp"
            app:cardCornerRadius="20sp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:src="@drawable/unlock" />

            <EditText
                android:id="@+id/ed2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="70dp"
                android:background="@color/white"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="40dp" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10sp"
            android:text="Forgot Password?"
            android:textColor="@color/black" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/t3"
            android:layout_marginStart="120dp"
            android:layout_marginTop="20sp"
            android:backgroundTint="@color/Dark"
            app:cardCornerRadius="20sp">

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70sp"
                android:layout_marginTop="10sp"
                android:text="3"
                android:textColor="@color/Blue"
                android:textSize="1dp" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginTop="9dp"
                android:text="LOG IN"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card3"
            android:layout_marginStart="140dp"
            android:layout_marginTop="40sp"
            android:gravity="center"
            android:text="Or connect using" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card4"
            android:layout_width="100dp"
            android:layout_height="30sp"
            android:layout_below="@+id/t4"
            android:layout_marginStart="70dp"
            android:layout_marginTop="15sp"
            android:backgroundTint="@color/Blue">

            <ImageView
                android:layout_width="20sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:src="@drawable/facebook" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:text="Face book" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card5"
            android:layout_width="100dp"
            android:layout_height="30sp"
            android:layout_below="@+id/t4"
            android:layout_alignTop="@id/card4"
            android:layout_marginStart="20sp"
            android:layout_toRightOf="@+id/card4"
            android:backgroundTint="@color/Red">

            <ImageView
                android:layout_width="15sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:src="@drawable/google" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Google" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/t5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card5"
            android:layout_marginStart="90dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Don't have an account?" />

        <TextView
            android:id="@+id/p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card5"
            android:layout_alignStart="@+id/t5"
            android:layout_marginStart="146dp"
            android:layout_marginTop="40dp"
            android:text="Sign Up"
            android:textColor="@color/teal_700" />


    </RelativeLayout>

</ScrollView>