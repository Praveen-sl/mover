<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Blue"
    tools:context=".CityPackerFragement">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image7"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40sp"
            android:layout_marginEnd="68dp"
            android:src="@drawable/delivery"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp">


            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="20sp"
                android:text="Select City"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/material"
                android:layout_width="330sp"
                android:layout_height="40sp"
                android:layout_below="@+id/text6"
                android:layout_marginStart="10sp"
                android:layout_marginTop="15sp"
                android:backgroundTint="@color/Blue"
                app:strokeColor="@color/green"
                app:strokeWidth="2dp">

                <EditText
                    android:id="@+id/ed2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:backgroundTint="@color/green"
                    android:hint="Type your City"
                    android:minHeight="48dp"
                    android:textColor="@color/white"
                    android:textSize="13sp"/>


            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/material"
                android:layout_marginStart="15sp"
                android:layout_marginTop="20sp"
                android:text="Moving From"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/material1"
                android:layout_width="330sp"
                android:layout_height="40sp"
                android:layout_below="@+id/text7"
                android:layout_marginStart="10sp"
                android:layout_marginTop="15sp"
                android:backgroundTint="@color/Blue"
                app:strokeColor="@color/green"
                app:strokeWidth="2dp">

                <EditText
                    android:id="@+id/ed3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:backgroundTint="@color/green"
                    android:hint="Enter your From Area"
                    android:minHeight="48dp"
                    android:textColor="@color/white"
                    android:textSize="13sp"/>=
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/text8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/material1"
                android:layout_marginStart="15sp"
                android:layout_marginTop="20sp"
                android:text="Moving To"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/material2"
                android:layout_width="330sp"
                android:layout_height="40sp"
                android:layout_below="@+id/text8"
                android:layout_marginStart="10sp"
                android:layout_marginTop="15sp"
                android:backgroundTint="@color/Blue"
                app:strokeColor="@color/green"
                app:strokeWidth="2dp">

                <EditText
                    android:id="@+id/ed4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:backgroundTint="@color/green"
                    android:hint="Enter your To Area"
                    android:minHeight="48dp"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </com.google.android.material.card.MaterialCardView>


            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/material2"
                android:layout_marginTop="50sp"
                android:backgroundTint="@color/Red"
                android:text="Customer Details" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="170sp"
                android:layout_below="@+id/btn3"
                android:backgroundTint="@color/Blue"
                android:layout_marginTop="10sp">

                <ImageView
                    android:id="@+id/image8"
                    android:layout_width="160dp"
                    android:layout_height="160sp"
                    android:layout_marginStart="10sp"
                    android:src="@drawable/mask1" />

                <TextView
                    android:id="@+id/text9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="20sp"
                    android:text="Best Safety Standards."
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="40dp"
                    android:text="We care."
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="80dp"
                    android:text="Using gloves and masks" />

                <TextView
                    android:id="@+id/text13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="105dp"
                    android:text="100% contactless service" />

                <TextView
                    android:id="@+id/text14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="125dp"
                    android:text="Usage of Aarogya Setu app" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15sp"
                android:text="Mover Work ?"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text10">

                <ImageView
                    android:id="@+id/image9"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="30sp"
                    android:layout_marginBottom="10sp"
                    android:src="@drawable/sharing1" />

                <TextView
                    android:id="@+id/text15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="20sp"
                    android:text="Share your Requirement"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="50sp"
                    android:text="Tell us where and when do you want " />

                <TextView
                    android:id="@+id/text17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="70sp"
                    android:text="to move" />


            </RelativeLayout>


        </RelativeLayout>

    </FrameLayout>


</ScrollView>