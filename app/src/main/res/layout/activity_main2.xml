<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/t6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's Get Started!"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="80dp"
            android:textSize="18dp"
            android:layout_marginStart="130sp"/>

        <TextView
            android:id="@+id/t7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t6"
            android:layout_marginStart="40sp"
            android:layout_marginTop="9dp"
            android:text="Create an account to QAliure to get all features" />
        <androidx.cardview.widget.CardView
            android:id="@+id/card6"
            android:layout_width="300dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20sp"
            android:layout_below="@+id/t7"
            android:layout_marginStart="40sp"
            android:layout_marginTop="30sp">
            <ImageView
                android:layout_width="20sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:src="@drawable/user"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Jhone Williams"
                android:layout_gravity="center"
                android:textColorHint="@color/Blue"
                android:background="@color/white"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card7"
            android:layout_width="300dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20sp"
            android:layout_below="@+id/card6"
            android:layout_marginStart="40sp"
            android:layout_marginTop="30sp">
            <ImageView
                android:layout_width="25sp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_email_24"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_gravity="center"
                android:background="@color/white"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card8"
            android:layout_width="300dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20sp"
            android:layout_below="@+id/card7"
            android:layout_marginStart="40sp"
            android:layout_marginTop="30sp">
            <ImageView
                android:layout_width="30sp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_phone_iphone_24"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10sp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:hint="Phone"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card9"
            android:layout_width="300dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20sp"
            android:layout_below="@+id/card8"
            android:layout_marginStart="40sp"
            android:layout_marginTop="30sp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/unlock"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10sp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:hint="Password"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card10"
            android:layout_width="300dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20sp"
            android:layout_below="@+id/card9"
            android:layout_marginStart="40sp"
            android:layout_marginTop="30sp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/unlock"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10sp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:hint="Confirm Password"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card11"
            android:layout_width="150sp"
            android:layout_height="40dp"
            android:layout_below="@+id/card10"
            android:layout_marginStart="120dp"
            android:layout_marginTop="50sp"
            android:backgroundTint="@color/Dark"
            app:cardCornerRadius="20sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="CREATE"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginStart="50dp"
                android:layout_marginTop="9dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/t8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:layout_below="@+id/card11"
            android:layout_marginTop="40dp"
            android:layout_marginStart="70dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login here"
            android:textColor="@color/Blue"
            android:layout_below="@+id/card11"
            android:layout_marginStart="7dp"
            android:layout_toRightOf="@+id/t8"
            android:layout_marginTop="40dp"/>


    </RelativeLayout>

</ScrollView>