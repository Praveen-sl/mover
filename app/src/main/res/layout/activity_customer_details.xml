<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blue"
    android:orientation="vertical"
    tools:context=".Customer_Details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="100sp"
            android:layout_height="80sp"
            android:layout_marginStart="145sp"
            android:layout_marginTop="60sp"
            android:src="@drawable/report1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Details"
        android:layout_marginStart="115dp"
        android:layout_marginTop="170sp"
        android:textSize="20sp"
        android:textColor="@color/black"/>

        <TextView
            android:id="@+id/text18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="250dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/ed5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text18"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="5dp"
            android:hint="select Name"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed5"
            android:layout_marginStart="10sp"
            android:layout_marginTop="15sp"
            android:textColor="@color/black"

            android:text="Email"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/ed6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text19"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="5dp"
            android:hint="select Email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed6"
            android:layout_marginStart="10sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"

            android:text="Address"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/ed7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text20"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="5dp"
            android:hint="select address"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed7"
            android:layout_marginStart="10sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"

            android:text="PhoneNumber"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/ed8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text21"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="5dp"
            android:hint="select Number"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed8"
            android:layout_marginStart="140sp"
            android:layout_marginTop="30sp"
            android:backgroundTint="@color/Red"
            android:text="Save"
            android:textColor="@color/white" />
    </RelativeLayout>

</ScrollView>